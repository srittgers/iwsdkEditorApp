<ComponentSchema packageName="com.iwsdk.components">
  <Enum name="PhysicsState">
    <EnumValue value="STATIC"/>
    <EnumValue value="DYNAMIC"/>
    <EnumValue value="KINEMATIC"/>
  </Enum>
  <Component name="PhysicsBody" description="Component to define physics behavior of an entity.">
    <EnumAttribute name="state" defaultValue="PhysicsState.DYNAMIC"/>
    <FloatAttribute name="linearDamping" defaultValue="0f"/>
    <FloatAttribute name="angularDamping" defaultValue="0f"/>
    <FloatAttribute name="gravityFactor" defaultValue="1f"/>
    <Vector3Attribute name="centerOfMass"/>
  </Component>
</ComponentSchema>